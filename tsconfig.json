{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "declaration": false,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "isolatedModules": false
  },
  "include": ["*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    ".git",
    "tests",
    "vitest.config.ts",
    "tmp_npm_test"
  ]
}
